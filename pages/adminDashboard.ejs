<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Admin</title>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css">
	<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
	<link rel="stylesheet" href="admin.css">
</head>
<body>
	<div class="container">
		<nav class="navbar">
			<a class="logo" href="/index">Hong Phuong</a>
			<ul class="nav-list">
				<li class="nav-item"><a href="/admin/dashboard" class="nav-link">Waiting List</a></li>
				<li class="nav-item"><a href="/admin/reservation" class="nav-link">Reservation</a></li>
				<li class="nav-item"><a href="/admin/chat" class="nav-link">Chat</a></li>
				<li class="nav-item"><a href="/admin/rooms" class="nav-link">Rooms</a></li>
			</ul>
			<ul class="nav-list">
				<li class="nav-item"><a href="/admin/logout" class="nav-link book-btn">Logout</a></li>
			</ul>
		</nav>
		</nav>
	</div>
	<section id="info" class="info">
		<div class="container">
			<h2>WAITING LIST</h2>
		</div>
	</section>
	<!-- Tab content with title -->
	<div align="center">
		<br><br>
		<table class="table__body">
			<thead>
				<tr> <!-- display column name -->
					<th>ID <span class="icon-arrow">&UpArrow;</span></th>
					<th>Booker Name <span class="icon-arrow">&UpArrow;</span></th>
					<th>Phone Number <span class="icon-arrow">&UpArrow;</span></th>
					<th>Date in <span class="icon-arrow">&UpArrow;</span></th>
					<th>Date out <span class="icon-arrow">&UpArrow;</span></th>
					<th>Description <span class="icon-arrow">&UpArrow;</span></th>
					<th>Status <span class="icon-arrow">&UpArrow;</span></th>
					<th>Decline</th>
					<th>Check in</th>
					<th>Check out</th>
				</tr>
			</thead>
			<tbody>

					<% userReservation.forEach(element=>{ %>
						<tr>
							<td data-label="ID" style="font-size: 17px; color: aliceblue;">
								<%= element.id %>
							</td> <!--insert into row values -->
							<td data-label="Booker Name" style="font-size: 17px; color: aliceblue;">
								<%= element.name %>
							</td>
							<td data-label="Phone Number" style="font-size: 17px; color: aliceblue;">
								<%= element.phone %>
							</td>
							<td data-label="Date_in" style="font-size: 17px; color: aliceblue;">
								<%= element.date_in %>
							</td>
							<td data-label="Date_out" style="font-size: 17px; color: aliceblue;">
								<%= element.date_out %>
							</td>
							<td data-label="Description" style="font-size: 17px; color: aliceblue; overflow: hidden;">
								<%= element.description %>
							</td>
							<td data-label="Status" style="font-size: 17px; color: aliceblue;">
								<%= element.status %>
							</td>
							<td>
								<form method="POST" action="/admin/decline/<%= element.id %>">
									<button class="decline-btn">
										Decline
									</button>
								</form>
							</td>
							<td>
								<form method="POST" action="/admin/checkin/<%= element.id %>">
									<button class="accept-btn">
										Check in
									</button>
								</form>
							</td>
							<td>
								<form method="POST" action="/admin/checkout/<%= element.id %>">
									<button class="accept-btn">
										Check out
									</button>
								</form>
							</td>
						</tr>
						<% }) %>
			</tbody>
		</table>>
	</div>
	<script>
		table_rows = document.querySelectorAll('tbody tr'),
    	table_headings = document.querySelectorAll('thead th');
		table_headings.forEach((head, i) => {
		let sort_asc = true;
		head.onclick = () => {
			sortTable(i, sort_asc);
			table_headings.forEach(head => head.classList.remove('active'));
			head.classList.add('active');

			document.querySelectorAll('td').forEach(td => td.classList.remove('active'));
			table_rows.forEach(row => {
				row.querySelectorAll('td')[i].classList.add('active');
			})

			head.classList.toggle('asc', sort_asc);
			sort_asc = head.classList.contains('asc') ? false : true;
		}
	})
	function sortTable(column, sort_asc) {
		[...table_rows].sort((a, b) => {
			let first_row = a.querySelectorAll('td')[column].textContent.toLowerCase(),
				second_row = b.querySelectorAll('td')[column].textContent.toLowerCase();

			return sort_asc ? (first_row < second_row ? 1 : -1) : (first_row < second_row ? -1 : 1);
		})
			.map(sorted_row => document.querySelector('tbody').appendChild(sorted_row));
	}
	</script>
	<style>
		main.table {
			width: 82vw;
			height: 90vh;
			backdrop-filter: blur(7px);
			box-shadow: 0 .4rem .8rem #0005;
			border-radius: .8rem;
			overflow: hidden;
		}

		.table__body {
			width: 95%;
			max-height: calc(89% - 1.6rem);
			background-color: #fffb;

			margin: .8rem auto;
			border-radius: .6rem;

			overflow: auto;
			overflow: overlay;
		}


		.table__body::-webkit-scrollbar{
			width: 0.5rem;
			height: 0.5rem;
		}

		.table__body::-webkit-scrollbar-thumb{
			border-radius: .5rem;
			background-color: #0004;
			visibility: hidden;
		}

		.table__body:hover::-webkit-scrollbar-thumb{ 
			visibility: visible;
		}

		table {
			width: 100%;
		}

		thead th span.icon-arrow {
			display: inline-block;
			width: 1.3rem;
			height: 1.3rem;
			border-radius: 50%;
			border: 1.4px solid transparent;
			
			text-align: center;
			font-size: 1rem;
			
			margin-left: .5rem;
			transition: .2s ease-in-out;
		}

		thead th {
			position: sticky;
			top: 0;
			left: 0;
			cursor: pointer;
			text-transform: capitalize;
		}

		tbody tr {
			--delay: .1s;
			transition: .5s ease-in-out var(--delay), background-color 0s;
		}

		tbody tr.hide {
			opacity: 0;
			transform: translateX(100%);
		}

		tbody tr:hover {
			background-color: #c29c76 !important;
		}

		tbody tr td:hover{
			color: black !important;
		}

		tbody tr td,
		tbody tr td p,
		tbody tr td img {
			transition: .2s ease-in-out;
		}

		tbody tr.hide td,
		tbody tr.hide td p {
			padding: 0;
			font: 0 / 0 sans-serif;
			transition: .2s ease-in-out .5s;
		}

		@media (max-width: 1000px) {
			td:not(:first-of-type) {
				min-width: 12.1rem;
			}
		}

		thead th:hover span.icon-arrow{
			border: 1.4px solid #6c00bd;
		}

		thead th:hover {
			color: #6c00bd;
		}

		thead th.active span.icon-arrow{
			background-color: #6c00bd;
			color: #fff;
		}

		thead th.asc span.icon-arrow{
			transform: rotate(180deg);
		}

		thead th.active,tbody td.active {
			color: #6c00bd;
		}
	</style>
</body>