<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Chat</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
        crossorigin="anonymous" />
    <link rel="stylesheet" href="admin.css">
    <style>
        .box-chat {
            width: 400px;
            height: 100vh;
            margin: auto;
            position: relative;
        }

        .messages-box {
            font-size: 20px;
            position: absolute;
            width: 800px;
            height: 80vh;
            bottom: 80px;
            color: black;
            border-radius: 8px;
            border: 6px solid #455D58;
            overflow-y: auto;
        }


        .message-input-div {
            position: absolute;
            bottom: 0;
        }

        #message-input {
            background: rgba(60, 60, 60, 0.4);
            color: white;
            width: 800px;
        }

        #message-input::placeholder {
            color: white;
            opacity: 0.4;
        }

        .box-title {
            position: absolute;
            font-size: 30px;
            color: #455D58;
            top: 30px;
        }

    </style>
</head>

<body>
    <div class="container">
        <nav class="navbar">
            <a class="logo" href="/index">Hong Phuong</a>
            <ul class="nav-list">
                <li class="nav-item"><a href="/admin/dashboard" class="nav-link">Waiting List</a></li>
                <li class="nav-item"><a href="/admin/reservation" class="nav-link">Reservation</a></li>
                <li class="nav-item"><a href="/admin/chat" class="nav-link">Chat</a></li>
                <li class="nav-item"><a href="/admin/rooms" class="nav-link">Rooms</a></li>
            </ul>
            <ul class="nav-list">
                <li class="nav-item"><a href="/admin/logout" class="nav-link book-btn">Logout</a></li>
            </ul>
        </nav>
        </nav>
    </div>
    <input id="user_id" value="<%= user.user_id %>" />
    <input id="email" value="<%= user.email %>" />

    <h1>User IDs</h1>
    <ul>
        <% userIds.forEach(userId => { %>
            <li><a href="#" class="user-id" data-id="<%= userId %>"><%= userId %></a></li>
        <% }); %>
    </ul>


    <div class="box-chat">
        <div class="box-title">
            <h1>Chat</h1>
        </div>
        <div class="messages-box">
            <ul class="messages-ul"></ul>
        </div>

        <div class="input-group mb-3 message-input-div">
            <input type="text" placeholder="Message" class="form-control" id="message-input" />
        </div>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>

<script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>
<script type="text/javascript">
    const socket = io("http://localhost:3001");

    socket.on("server_send_message", (msg) => {
        $(".messages-ul").append(
            `<li class="messages-li">${msg?.user_name}: ${msg?.message}</li>`
        );
    });

    const input = $("#message-input");

    input.keypress(function (e) {
        if (e.which == 13) {
            if (input.val()) {
                socket.emit("client_send_message", {
                    user_id: $("#user_id").val(),
                    user_name: $("#email").val(),
                    message: input.val(),
                });
                input.val("");
            }
            return false;
        }
    });

    $.ajax({
        url: "http://localhost:3001/messages",
        type: "GET",
        success: function (data) {
            data?.forEach((msg) => {
                $(".messages-ul").append(
                    `<li class="messages-li">${msg?.user_name}: ${msg?.message}</li>`
                );
            });
        },
    });
</script>

<script>
    document.querySelectorAll('.user-id').forEach(link => {
        link.addEventListener('click', (event) => {
            event.preventDefault();
            const selectedUserId = event.target.dataset.id;
            const adminId = "<%= user.user_id %>";
            const chatId = adminId + "to" + selectedUserId;
            console.log("Selected chatId:", chatId);
            document.getElementById('user_id').value = chatId;
             $.ajax({
                url: `http://localhost:3001/messages/search?user_id=${chatId}`,
                type: "GET", 
                success: function (data) {
                    $(".messages-ul").empty()

                    data?.forEach((msg) => {
                        $(".messages-ul").append(
                            `<li class="messages-li">${msg?.user_name}: ${msg?.message}</li>`
                        );
                    });
                },
                error: function (xhr, status, error) {
                    console.error("Error saving chat ID:", error);
                }
            });
        });
    });
</script>

</html>