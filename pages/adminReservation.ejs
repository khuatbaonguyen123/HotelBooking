    <!-- Tab content with title -->
    <div align="center">
        <form method="GET" action="/admin/search">
            <select name="searchby" id="searchby" style="width: 6.5%; margin-top: 2.5rem;" name="type" id="type">
                <option value="default">Default</option>
                <option value="id">ID</option>
                <option value="name">Name</option>
                <option value="datein">Date in</option>
                <option value="dateout">Date out</option>
                <option value="rooms">Rooms</option>
                <option value="status">Status</option>
            </select>
            <input type="input" name="keyword" placeholder="Id..." style="background-color: #eee;
            border: 1px solid #000; padding: 12px 15px; margin: 8px 0;" value= "<%= keyword?keyword:"" %>">
            <button style="background-color: #c29c76; color: white; 
            border: none; padding: 12px; margin: 5px; cursor: pointer;
            border-radius: 5px;">Search</button>
        </form>
    </div>
    <% if (message) { %>
        <div class="alert alert-info"><%= message %></div>
    <% } %>
    <% if(userReservation){ %>
    <div class="container" align="center">
        <table>
			<thead>
				<tr> <!-- display column name -->
					<th>BookingId</th>
					<th>Name</th>
					<th>Date in</th>
					<th>Date out</th>
					<th>Description</th>
					<th>Status</th>
					<th>Price</th>
					<th>Payment date</th>
				</tr>
			</thead>
            <tbody>

                <% userReservation.forEach(element=>{ %>
                    <tr>
                        <td data-label="Booker_id" style="font-size: 17px; color: aliceblue;">
                            <%= element.bid %>
                        </td>
                        <td data-label="Booker Name" style="font-size: 17px; color: aliceblue;">
                            <%= element.name %>
                        </td>
                        <td data-label="Date_in" style="font-size: 17px; color: aliceblue;">
                            <%= element.date_in %>
                        </td>
                        <td data-label="Date_out" style="font-size: 17px; color: aliceblue;">
                            <%= element.date_out %>
                        </td>
                        <td data-label="Description" style="font-size: 17px; color: aliceblue;">
                            <%= element.description %>
                        </td>
                        <td data-label="Status" style="font-size: 17px; color: aliceblue;">
                            <%= element.status %>
                        </td>
                        <td data-label="Price" style="font-size: 17px; color: aliceblue;">
                            <%= element.price %>
                        </td>
                        <td data-label="PaymentDate" style="font-size: 17px; color: aliceblue;">
                            <%= element.payment_date %>
                        </td>
                    </tr>
                    <% }) %>
        </tbody>
    </table>>
     <!-- Pagination -->
		 <!-- <div id="pagination">
			<ul id="pagination-list" class="pagination justify-content-center">
				<% for (let i = 1; i <= totalPages; i++) { %>
					<li class="<%= currentPage === i ? 'active' : '' %>">
						<a href="/admin/search?page=<%= i %>"><%= i %></a>
					</li>
				<% } %>
			</ul>
		</div> -->
		<div id="pagination">
			<ul id="pagination-list" class="pagination justify-content-center">

				<!-- Previous Button -->
				<% if (currentPage > 1) { %>
					<li>
						<a href="/admin/search?searchby=<%= searchby %>&keyword=<%= keyword %>&page=<%= currentPage - 1 %>" aria-label="Previous">
							<span aria-hidden="true">&laquo;</span>
						</a>
					</li>
				<% } %>

				<!-- Numbered Page Links (Limited to 3) -->
				<% for (let i = Math.max(1, currentPage - 1); i <= Math.min(currentPage + 1, totalPages); i++) { %>
					<li class="<%= currentPage === i ? 'active' : '' %>">
						<a href="/admin/search?searchby=<%= searchby %>&keyword=<%= keyword %>&page=<%= i %>"><%= i %></a>
					</li>
				<% } %>

				<!-- Next Button -->
				<% if (currentPage < totalPages) { %>
					<li>
						<a href="/admin/search?searchby=<%= searchby %>&keyword=<%= keyword %>&page=<%= currentPage + 1 %>" aria-label="Next">
							<span aria-hidden="true">&raquo;</span>
						</a>
					</li>
				<% } %>

			</ul>
		</div>
    </div>
    <% } %>
