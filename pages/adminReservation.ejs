            </select>
            <input type="input" name="keyword" placeholder="Id..." style="background-color: #eee;
            border: 1px solid #000; padding: 12px 15px; margin: 8px 0;" value= "<%= keyword?keyword:"" %>">
            <button style="background-color: #c29c76; color: white; 
            border: none; padding: 12px; margin: 5px; cursor: pointer;
            border-radius: 5px;">Search</button>
        </form>
    </div>
    <% if (message) { %>
        <div class="alert alert-info"><%= message %></div>
    <% } %>
    <% if(userReservation){ %>
    <div class="container" align="center">
        <table>
			<thead>
				<tr> <!-- display column name -->
					<th>BookingId <span class="icon-arrow">&UpArrow;</span></th>
					<th>Name <span class="icon-arrow">&UpArrow;</span></th>
					<th>Date in <span class="icon-arrow">&UpArrow;</span></th>
					<th>Date out <span class="icon-arrow">&UpArrow;</span></th>
					<th>Description <span class="icon-arrow">&UpArrow;</span></th>
					<th>Status <span class="icon-arrow">&UpArrow;</span></th>
					<th>Price <span class="icon-arrow">&UpArrow;</span></th>
					<th>Payment date <span class="icon-arrow">&UpArrow;</span></th>
				</tr>
			</thead>
            <tbody>

                <% userReservation.forEach(element=>{ %>
                    <tr>
                        <td data-label="Booker_id" style="font-size: 17px; color: aliceblue;">
                            <%= element.bid %>
                        </td>
                        <td data-label="Booker Name" style="font-size: 17px; color: aliceblue;">
                            <%= element.name %>
                        </td>
                        <td data-label="Date_in" style="font-size: 17px; color: aliceblue;">
                            <%= element.date_in %>
                        </td>
                        <td data-label="Date_out" style="font-size: 17px; color: aliceblue;">
                            <%= element.date_out %>
                        </td>
                        <td data-label="Description" style="font-size: 17px; color: aliceblue;">
                            <%= element.description %>
                        </td>
                        <td data-label="Status" style="font-size: 17px; color: aliceblue;">
                            <%= element.status %>
                        </td>
                        <td data-label="Price" style="font-size: 17px; color: aliceblue;">
                            <%= element.price %>
                        </td>
                        <td data-label="PaymentDate" style="font-size: 17px; color: aliceblue;">
                            <%= element.payment_date %>
                        </td>
                    </tr>
                    <% }) %>
        </tbody>
    </table>>
     <!-- Pagination -->
		 <!-- <div id="pagination">
			<ul id="pagination-list" class="pagination justify-content-center">
				<% for (let i = 1; i <= totalPages; i++) { %>
					<li class="<%= currentPage === i ? 'active' : '' %>">
