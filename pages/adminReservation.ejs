		<div id="pagination">
			<ul id="pagination-list" class="pagination justify-content-center">

				<!-- Previous Button -->
				<% if (currentPage > 1) { %>
					<li>
						<a href="/admin/search?searchby=<%= searchby %>&keyword=<%= keyword %>&page=<%= currentPage - 1 %>" aria-label="Previous">
							<span aria-hidden="true">&laquo;</span>
						</a>
					</li>
				<% } %>

				<!-- Numbered Page Links (Limited to 3) -->
				<% for (let i = Math.max(1, currentPage - 1); i <= Math.min(currentPage + 1, totalPages); i++) { %>
					<li class="<%= currentPage === i ? 'active' : '' %>">
						<a href="/admin/search?searchby=<%= searchby %>&keyword=<%= keyword %>&page=<%= i %>"><%= i %></a>
					</li>
				<% } %>

				<!-- Next Button -->
				<% if (currentPage < totalPages) { %>
					<li>
						<a href="/admin/search?searchby=<%= searchby %>&keyword=<%= keyword %>&page=<%= currentPage + 1 %>" aria-label="Next">
							<span aria-hidden="true">&raquo;</span>
						</a>
					</li>
				<% } %>

			</ul>
		</div>
    </div>
    <% } %>
    <script>
		table_rows = document.querySelectorAll('tbody tr'),
    	table_headings = document.querySelectorAll('thead th');
		table_headings.forEach((head, i) => {
		let sort_asc = true;
		head.onclick = () => {
            if(i == 0 || i == 6) {
			    sortTableNumber(i, sort_asc);
                console.log(i);
            } else {
			    sortTableText(i, sort_asc);
            }
			table_headings.forEach(head => head.classList.remove('active'));
			head.classList.add('active');

			document.querySelectorAll('td').forEach(td => td.classList.remove('active'));
			table_rows.forEach(row => {
				row.querySelectorAll('td')[i].classList.add('active');
			})

			head.classList.toggle('asc', sort_asc);
			sort_asc = head.classList.contains('asc') ? false : true;
		}
	})
    function sortTableNumber(column, sort_asc) {
		[...table_rows].sort((a, b) => {
			let first_row = parseInt(a.querySelectorAll('td')[column].textContent, 10),
				second_row = parseInt(b.querySelectorAll('td')[column].textContent, 10);

			return sort_asc ? (first_row < second_row ? 1 : -1) : (first_row < second_row ? -1 : 1);
		})
			.map(sorted_row => document.querySelector('tbody').appendChild(sorted_row));
	}
	function sortTableText(column, sort_asc) {
		[...table_rows].sort((a, b) => {
			let first_row = a.querySelectorAll('td')[column].textContent.toLowerCase(),
				second_row = b.querySelectorAll('td')[column].textContent.toLowerCase();

			return sort_asc ? (first_row < second_row ? 1 : -1) : (first_row < second_row ? -1 : 1);
		})
			.map(sorted_row => document.querySelector('tbody').appendChild(sorted_row));
	}
	</script>
    <style>
        main.table {
			width: 82vw;
			height: 90vh;
			backdrop-filter: blur(7px);
			box-shadow: 0 .4rem .8rem #0005;
			border-radius: .8rem;
			overflow: hidden;
		}
        .table__body {
			width: 95%;
			max-height: calc(89% - 1.6rem);
			background-color: #fffb;

			margin: .8rem auto;
			border-radius: .6rem;

			overflow: auto;
			overflow: overlay;
		}

        thead th span.icon-arrow {
			display: inline-block;
			width: 1.3rem;
			height: 1.3rem;
			border-radius: 50%;
			border: 1.4px solid transparent;
			
			text-align: center;
			font-size: 1rem;
			
			margin-left: .5rem;
			transition: .2s ease-in-out;
		}

		thead th {
			position: sticky;
			top: 0;
			left: 0;
			cursor: pointer;
			text-transform: capitalize;
		}

		tbody tr {
			--delay: .1s;
			transition: .5s ease-in-out var(--delay), background-color 0s;
		}

		tbody tr.hide {
			opacity: 0;
			transform: translateX(100%);
		}

		tbody tr:hover {
			background-color: #c29c76 !important;
		}

		tbody tr td:hover{
			color: black !important;
		}

		tbody tr td,
		tbody tr td p,
		tbody tr td img {
			transition: .2s ease-in-out;
		}

		tbody tr.hide td,
		tbody tr.hide td p {
			padding: 0;
			font: 0 / 0 sans-serif;
			transition: .2s ease-in-out .5s;
		}

		@media (max-width: 1000px) {
			td:not(:first-of-type) {
				min-width: 12.1rem;
			}
		}

		thead th:hover span.icon-arrow{
			border: 1.4px solid #6c00bd;
		}

		thead th:hover {
			color: #6c00bd;
		}

		thead th.active span.icon-arrow{
			background-color: #6c00bd;
			color: #fff;
		}

		thead th.asc span.icon-arrow{
			transform: rotate(180deg);
		}

		thead th.active,tbody td.active {
			color: #6c00bd;
		}
