<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" href="admin.css">
</head>

<body>
    <div class="container">
        <nav class="navbar">
            <a class="logo" href="/index">Hong Phuong</a>
            <ul class="nav-list">
                <li class="nav-item"><a href="/admin/dashboard" class="nav-link">Waiting List</a></li>
                <li class="nav-item"><a href="/admin/reservation" class="nav-link">Reservation</a></li>
                <li class="nav-item"><a href="/admin/chat" class="nav-link">Chat</a></li>
                <li class="nav-item"><a href="/admin/rooms" class="nav-link">Rooms</a></li>
            </ul>
            <ul class="nav-list">
                <li class="nav-item"><a href="/admin/logout" class="nav-link book-btn">Logout</a></li>
            </ul>
        </nav>
        </nav>
    </div>
    <section id="info" class="info">
        <div class="container">
            <h2>RESERVATION SEARCH</h2>
        </div>
    </section>
    <!-- Tab content with title -->
    <div align="center">
        <form method="post" action="/admin/search">
            <select style="width: 6.5%; margin-top: 2.5rem;" name="type" id="type">
                <option>Default</option>
                <option>ID</option>
                <option>Name</option>
                <option>Date in</option>
                <option>Date out</option>
                <option>Rooms</option>
                <option>Status</option>
            </select>
            <input type="search" name="search" placeholder="Id..." style="background-color: #eee;
            border: 1px solid #000; padding: 12px 15px; margin: 8px 0;">
            <button style="background-color: #c29c76; color: white; 
            border: none; padding: 12px; margin: 5px; cursor: pointer;
            border-radius: 5px;">Search</button>
        </form>
    </div>
    <% if (message) { %>
        <div class="alert alert-info"><%= message %></div>
    <% } %>
    <% if(userReservation){ %>
    <div class="container" align="center">
        <table>
			<thead>
				<tr> <!-- display column name -->
					<th>BookingId</th>
					<th>Name</th>
					<th>Date in</th>
					<th>Date out</th>
					<th>Description</th>
					<th>Status</th>
					<th>Price</th>
					<th>Payment date</th>
				</tr>
			</thead>
            <tbody>

                <% userReservation.forEach(element=>{ %>
                    <tr>
                        <td data-label="Booker_id" style="font-size: 17px; color: aliceblue;">
                            <%= element.bid %>
                        </td>
                        <td data-label="Booker Name" style="font-size: 17px; color: aliceblue;">
                            <%= element.name %>
                        </td>
                        <td data-label="Date_in" style="font-size: 17px; color: aliceblue;">
                            <%= element.date_in %>
                        </td>
                        <td data-label="Date_out" style="font-size: 17px; color: aliceblue;">
                            <%= element.date_out %>
                        </td>
                        <td data-label="Description" style="font-size: 17px; color: aliceblue;">
                            <%= element.description %>
                        </td>
                        <td data-label="Status" style="font-size: 17px; color: aliceblue;">
                            <%= element.status %>
                        </td>
                        <td data-label="Price" style="font-size: 17px; color: aliceblue;">
                            <%= element.price %>
                        </td>
                        <td data-label="PaymentDate" style="font-size: 17px; color: aliceblue;">
                            <%= element.payment_date %>
                        </td>
                    </tr>
                    <% }) %>
        </tbody>
    </table>>
    </div>
    <% } %>
    <script src="tab.js"></script>
</body>